{
  "name": "BulmaHAC - Grades Never Looked This Good",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Enter BulmaHAC, a one-click Chrome extension that completely transforms PowerSchool's Access Center for students. Created with Bulma.io.",
  "icons": {
    "16": "src/icons/BHAC-Transparent_16x16.png",
    "32": "src/icons/BHAC-Transparent_32x32.png",
    "48": "src/icons/BHAC-Transparent_48x48.png",
    "64": "src/icons/BHAC-Transparent_64x64.png",
    "128": "src/icons/BHAC-Transparent_128x128.png"
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "options_page": "src/options.html",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icons/BHAC-Transparent_16x16.png",
      "32": "src/icons/BHAC-Transparent_32x32.png",
      "48": "src/icons/BHAC-Transparent_48x48.png",
      "128": "src/icons/BHAC-Transparent_128x128.png"
    }
  },
  "host_permissions": [
    "https://www.accesscenter.roundrockisd.org/",
    "http://www.accesscenter.roundrockisd.org/"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "web_accessible_resources": [{
    "resources": [
      "src/css/*",
      "src/js/*",
      "src/icons/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": [
        "https://www.accesscenter.roundrockisd.org/",
        "http://www.accesscenter.roundrockisd.org/"
      ],
      "css": ["my-styles.css"],
      "js": ["content-script.js"]
    }
  ]
}